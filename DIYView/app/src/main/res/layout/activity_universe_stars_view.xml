<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.UniverseStarsViewActivity">
    <com.example.diyview.view.UniverseStarsView
        android:id="@+id/universeStarsView"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        app:imgPadding="2dp"
        app:dotSize="1dp"
        app:myDotColor="@color/orange"
        app:dotDuration="3000"
        app:dotNum="800"
        app:maxOffset="100dp"
        android:background="@color/lightblue"
        android:gravity="center">
        <com.example.diyview.view.RoundRecImageView
            xmlns:civ="http://schemas.android.com/apk/res-auto"
            android:id="@+id/centerImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@mipmap/roundpic"
            civ:circle="true"/>
    </com.example.diyview.view.UniverseStarsView>
    <com.example.diyview.view.RoundRecImageView
        xmlns:civ="http://schemas.android.com/apk/res-auto"
        android:layout_width="126dp"
        android:layout_height="126dp"
        android:background="@android:color/holo_blue_dark"
        android:scaleType="matrix"
        android:src="@mipmap/roundpic"
        civ:circle="true"/>
</RelativeLayout>